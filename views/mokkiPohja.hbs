<div class="mb-4" style="max-width: 75%; margin: 0 auto; col-sm-10">

    <div>
        <h1>Mökin nimi: {{cottage.nimi }}</h1>
    </div>
    <br>
    <div>
        <h2>Hinta per päivä: {{ cottage.hinta }}€</h2>
    </div>
    <br>
    <br>


    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="container-lg col-sm-x">
            <div class="carousel-inner">
                {{#each cottage.mokkikuvat}}
                <div class="carousel-item{{#if @first}} active{{/if}}">
                    <img class="d-block w-100" src="/mokkikiuvat/{{path}}" alt="First slide">
                </div>
                {{/each}}
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <h3>Mökin tiedot</h3>
    <div class="grid-container">
        <div class="lista">
            <div class="float-left">
                <div class="list-group" id="myList" role="tablist">
                    <a class="list-group-item list-group-item-action active" data-toggle="list" href="#perustiedot"
                        role="tab">Perustiedot</a>
                    <a class="list-group-item list-group-item-action" data-toggle="list" href="#huoneet"
                        role="tab">Huoneet</a>
                    <a class="list-group-item list-group-item-action" data-toggle="list" href="#varustelu"
                        role="tab">Varustelu</a>
                    <a class="list-group-item list-group-item-action" data-toggle="list" href="#koko"
                        role="tab">Koko</a>
                    <a class="list-group-item list-group-item-action" data-toggle="list" href="#sijainti"
                        role="tab">Sijainti</a>
                    <a class="list-group-item list-group-item-action" data-toggle="list" href="#Etäisyydet"
                        role="tab">Etäisyydet</a>
                </div>
            </div>
        </div>

        <div class="tiedot">
            <div class="float-left">
                <div class="tab-content p-3">
                    <div class="tab-pane active" id="perustiedot" role="tabpanel">
                        perustiedot mökistä: {{ cottage.perustiedot }}</div>
                    <div class="tab-pane" id="huoneet" role="tabpanel">{{ cottage.huoneet }}</div>
                    <div class="tab-pane" id="varustelu" role="tabpanel">{{ cottage.varustelu }}</div>
                    <div class="tab-pane" id="koko" role="tabpanel">{{ cottage.koko }}</div>
                    <div class="tab-pane" id="sijainti" role="tabpanel">{{ cottage.sijainti }}</div>
                    <div class="tab-pane" id="etäisyydet" role="tabpanel">{{ cottage.etaisyydet }}
                    </div>
                    </perustiedot>
                </div>
            </div>
        </div>
    </div>
</div>